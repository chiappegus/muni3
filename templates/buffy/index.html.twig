    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for buffy in buffies %}
            <tr>
                <td>{{ buffy.id }}</td>
                <td>{{ buffy.name }}</td>
                <td>
                    <a href="{{ path('buffy_show', {'id': buffy.id}) }}">show</a>
