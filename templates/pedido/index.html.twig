{% extends 'base.html.twig' %}

{% block title %}Pedido index{% endblock %}

{% block body %}
    <h1>Pedido index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Producto Solicitado</th>
                <th>Cantidad</th>
                <th>Precio Unidad</th>
                
                <th>Precio Total</th>
                <th>Restaurant</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>{{ pedido.Persona.getNombre }}</td>
                <td>{{ pedido.Persona.getApellido }}</td>
                {# <td>{{ pedido.Buffy.name }}</td> #}
                <td>{{ pedido.menu.getName }}</td>
               {#  <td>{{ pedido.menu }}</td> #}
                <td>{{ pedido.cantidad }}</td>
                <td>{{ pedido.menu.getPrecio }}</td>
                <td>
                    {% set sum = pedido.menu.getPrecio * pedido.cantidad %}
                        {{sum}}
                   

                </td>
                <td>{{ pedido.restaurant }}</td>
                <td>{{ pedido.createdAt ? pedido.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ pedido.updatedAt ? pedido.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                
                <td>
                    <a href="{{ path('pedido_show', {'id': pedido.id}) }}">show</a>
                    <a href="{{ path('pedido_edit', {'id': pedido.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pedido_new') }}">Create new</a>
{% endblock %}
